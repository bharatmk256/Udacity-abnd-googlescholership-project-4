<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- MainActivityActionBar -->
        <item name="android:actionBarStyle">@style/Actionbar</item>
        <item name="actionBarStyle">@style/Actionbar</item>
    </style>
    <!-- musicActivityActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Actionbar2</item>
        <item name="actionBarStyle">@style/Actionbar2</item>
    </style>
    <!--for mainActivity-->
    <style name="Actionbar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/gradient_playerbottom</item>
        <item name="background">@drawable/gradient_playerbottom</item>
    </style>
    <!--for musicActivity-->
    <style name="Actionbar2" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/gradient_musicactivity</item>
        <item name="background">@drawable/gradient_musicactivity</item>
    </style>


</resources>
